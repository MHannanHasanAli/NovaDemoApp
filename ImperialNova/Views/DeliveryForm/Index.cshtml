        var currentLabel = 'a';
        $("#addProduct").click(function () {
            var currentIndex = $(".product-row").length;
            var nextLabel = String.fromCharCode(currentLabel.charCodeAt(0) + currentIndex);

            var newProductRow = `
                <div class="fom-group product-row">
                <div class="input-group mb-3 ng-scope">
                <span style="height:35px;" class="input-group-text ng-binding">${nextLabel}) </span>
