                </div>

                </div>
            `;

            $("#productsContainer").append(newProductRow);
        });

        $(document).on("click", ".remove-product", function () {
            $(this).closest(".product-row").remove();
        });

        $("#SubmitForm").click(function () {
            $("#SubmitForm").attr("disabled", "disabled");
            showLoadingSpinner();
            var signatureData = inputCanvas.toDataURL('image/png');
            var productDataArray = [];

            var ProductNameFirst = $("#ProductNameFirst").val();
            var QuantityFirst = $("#QuantityFirst").val();
            if (ProductNameFirst != "") {
                debugger
                var productFirst = {
                    _ProductQuantity: QuantityFirst,
