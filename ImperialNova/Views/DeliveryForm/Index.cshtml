            }

            $('.product-row').each(function () {
                var productData = {
                    _ProductQuantity: $(this).find('input[name^="_Products"]').val(),
                    _ProductName: $(this).find('input[name^="_Products"]').siblings('input[name$="_ProductName"]').val()
                };
                productDataArray.push(productData);

            });




            // Serialize the product data array as JSON
            var productDataString = JSON.stringify(productDataArray);
            // Iterate through all product rows
           /* var signatureData = signaturePad.toDataURL();*/

            // Serialize the product data array as JSON
            var productDataString = JSON.stringify(productDataArray);
            var encodedProductData = encodeURIComponent(productDataString);

            // Send AJAX request
            $.ajax({
                url: '@Url.Action("SubmitDeliveryForm", "DeliveryForm")',
                type: 'POST',
                data: $("#deliveryForm").serialize() + "&productData=" + encodedProductData + "&signatureData=" + signatureData,
                success: function (response) {
                    if (response.success) {
                        hideLoadingSpinner();
                        var signatureData = inputCanvas.toDataURL('image/png'); // Convert to data URL

                        // Send the signature data to the backend
                        $.post("/DeliveryForm/SaveSignature", { signatureData: signatureData }, function (result) {
