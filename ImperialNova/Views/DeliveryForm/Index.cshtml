                        window.open('@Url.Action("Invoice", "DeliveryForm")' + '?id=' + orderId, '_blank');
                        window.location.href = '@Url.Action("Listing", "DeliveryForm")';
                            } else {
                                alert("Error saving signature.");
                            }
                        });

                    } else {
                        hideLoadingSpinner();
                    }
                },
                error: function () {
                    hideLoadingSpinner();
