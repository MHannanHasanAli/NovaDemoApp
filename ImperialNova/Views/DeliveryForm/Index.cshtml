        color: lawngreen;
    }

    /* Remove text decoration and make it green for hover state */
    a.terms-modal:hover {
        text-decoration: none;
        color: lawngreen;
        cursor: pointer;
    }

    /* Remove text decoration and make it green for active/focus state */
    a.terms-modal:focus, a.terms-modal:active {
        text-decoration: none;
        color: lawngreen;
    }

    .data-btn {
        background: none;
        color: lawngreen;
