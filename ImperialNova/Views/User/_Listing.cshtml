@model ImperialNova.ViewModels.UsersListingViewModel
@{
    ViewBag.Title = "Index";
}
<style>
    .delete {
        padding-top: 5px;
        padding-right: 9px;
        padding-bottom: 5px;
        border: 1px solid red;
    }

    .edit {
        padding-top: 5px;
        padding-right: 9px;
        padding-bottom: 5px;
        border: 1px solid blue;
    }
    .role {
        padding-top: 5px;
        padding-right: 9px;
        padding-bottom: 5px;
        border: 1px solid green;
    }
</style>
<div class="row">

    <div class="col-lg-12 grid-margin stretch-card">
        @if (Model.Users != null)
        {
            <div class="card">

                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>

                                <th>
                                    Name
                                </th>
                                <th>
                                    Email
                                </th>
                                <th>
                                    Contact
                                </th>
                              
                                <th>
                                    Action
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.Users)
                            {
                                <tr>
                                    <td>@item.Name</td>
                                    <td>@item.Email</td>
                                    <td>@item.PhoneNumber</td>
                                    <td>
                                        <a href="@Url.Action("Action", "User", new { ID = item.Id })" type="button" class="edit data-btn btn-outline-primary btn-icon-text"><i class="mdi mdi-pencil"></i> EDIT</a>
                                        <a href="@Url.Action("Delete", "User", new { ID = item.Id })" type="button" class="delete data-btn btn-outline-danger btn-icon-text"><i class="mdi mdi-delete"></i>DELETE</a>
                                        <a href="@Url.Action("UserRoles", "User", new { ID = item.Id })" type="button" class="role data-btn btn-outline-success btn-icon-text"><i class="mdi mdi-account-details"></i>ROLES</a>

                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        }
        else
        {

            <div class="alert alert-warning col-md-12" role="alert">
                Sorry! No records exist.
            </div>
            }
    </div>
</div>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
    $(".data-btn").click(function () {
        $.ajax({
            url: $(this).attr("href"),
        })
            .done(function (response) {
                $("#actionModal").html(response);
            });
        });
</script>



