@model ImperialNova.ViewModels.UserActionModel

@if (Model != null)
{
    <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title">
                <span>Delete User</span>
            </h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
        <div class="modal-body">
            <form id="actionForm">
                <input type="hidden" name="ID" value="@Model.ID" />
            </form>
            <div class="alert alert-danger" role="alert">
                Are you sure you want to delete this User?
            </div>
        </div>
        <div class="modal-footer">
            <a id="actionButton" type="button" class="btn btn-danger"><i class="fas fa-trash-alt mr-1"></i> Delete</a>
            <a type="button" class="btn btn-secondary"><i class="fas fa-times mr-1"></i> Close</a>
        </div>
    </div>
}
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
	$("#actionButton").click(function () {
		$.ajax({
			url: '@Url.Action("Delete", "User")',
			type: "post",
			data: $("#actionForm").serialize()
		})
		.done(function (response) {
			if(response.Success)
			{
				window.location.href = "@Url.Action("Index", "User")";
			}
			else {
				$(".errorDiv").html(response.Message);
			}
		});
	});
</script>