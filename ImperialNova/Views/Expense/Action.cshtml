    function calculateTotalExpenses() {
        //var _TotalSales = parseFloat($("#_TotalSales").val()) || 0;
        var _ProductCost = parseFloat($("#_ProductCost").val()) || 0;
        var _VanExpenses = parseFloat($("#_VanExpenses").val()) || 0;
